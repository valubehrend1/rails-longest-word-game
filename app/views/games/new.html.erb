<div class="container">
    <div class="wrapper">
        <span>N</span>
        <span>E</span>
        <span>W</span>
        <span> </span>
        <span>G</span>
        <span>A</span>
        <span>M</span>
        <span>E</span>
    </div>
    <div class="grid-container">
        <% @letters.each do |letter| %>
            <div class="grid-item"><%= letter %></div>
        <% end %>
    </div>
    <form method='POST' action='score'>
        <label>What is the longest word you can find?</label>
        <%= hidden_field_tag :letters, @letters %>
        <input class='input-words' type="text" name='word'>
        <input class='input-btn' type="submit" value='PLAY!'>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
</div>